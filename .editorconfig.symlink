root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.yml]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.mako]
indent_style = space
indent_size = 2

[*.ini]
indent_style = space
indent_size = 4

[*.cfg]
indent_style = space
indent_size = 4

[*.py]
charset = utf-8
indent_style = space
indent_size = 4

[*.rst]
charset = utf-8
indent_style = space
indent_size = 3

[{*.fish,*fish.symlink}]
indent_style = space
# match fish_indent
indent_size = 4

[{*.sh,.bash*,bin/*}]
indent_style = space
indent_size = 2

# config for shfmt https://github.com/mvdan/sh
binary_next_line = true
switch_case_indent = true
space_redirects = true
