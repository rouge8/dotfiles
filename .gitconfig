[user]
	name = Andy Freeland
	email = andy@andyfreeland.net
[alias]
	unstage = reset HEAD --
	last = log -1 HEAD
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short

[core]
	excludesfile = ~/.gitglobalignore
	autocrlf = input
    editor = vim

[color]
	status = auto
	branch = auto
	diff = auto
    interactive = auto
[merge]
	tool = threesome

[mergetool "threesome"]
    cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'ThreesomeInit'"
    trustExitCode = true

[push]
    default = upstream

[branch "master"]
	rebase = true

[browser "gitscm"]
	cmd = /bin/sh -c 'firefox http://git-scm.com/docs/$(basename $1 .html)' --
[help]
	browser = gitscm
[github]
	user = rouge8
