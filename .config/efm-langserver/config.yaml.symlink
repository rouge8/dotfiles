---

version: 2

tools:
  fish-indent: &fish-indent
    format-command: fish_indent
    format-stdin: true

  gofmt: &gofmt
    format-command: gofmt
    format-stdin: true

  djhtml: &djhtml
    format-command: djhtml --tabwidth 2 -
    format-stdin: true

  stylua: &stylua
    format-command: stylua --search-parent-directories --stdin-filepath ${INPUT} -
    format-stdin: true

  black: &black
    format-command: black -
    format-stdin: true

  vint: &vint
    lint-command: vint -
    lint-stdin: true
    lint-formats:
      - "%f:%l:%c: %m"

  yamllint: &yamllint
    lint-command: yamllint -f parsable -
    lint-stdin: true
    lint-ignore-exit-code: true

languages:
  fish:
    - <<: *fish-indent
  go:
    - <<: *gofmt
  htmldjango:
    - <<: *djhtml
  lua:
    - <<: *stylua
  vim:
    - <<: *vint
  yaml:
    - <<: *yamllint
