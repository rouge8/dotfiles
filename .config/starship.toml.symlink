format = """
$username at $hostname in $directory\
$git_branch\
$git_state\
$git_status\
$python\
$rust\
$aws\
$cmd_duration\
$status\
$line_break\
${shell}\
$jobs\
$character"""

[username]
show_always = true
format = "[$user]($style)"

[hostname]
ssh_only = false
format = "[$hostname]($style)"

[directory]
fish_style_pwd_dir_length = 1

[git_branch]
symbol = ""

[git_status]
stashed = ""

[python]
python_binary = "python3"
# Only show the Python version when a virtualenv is active
detect_extensions = []
detect_files = []

[aws]
format = "on [$symbol$profile]($style) "
force_display = true

[cmd_duration]
min_time = 1000
show_milliseconds = true

[status]
format = "exited [$status]($style)"
disabled = false

[shell]
fish_indicator = ""
bash_indicator = "ğŸš "
zsh_indicator = "ğŸ’¤ "
unknown_indicator = "â‡ "
format = '[$indicator]($style)'
style = "white bold"
disabled = false

[character]
# Use the same symbol for success/error because starship doesn't support
# distinguishing success/error in 'vimcmd_symbol'.
#
# TODO: Revisit if https://github.com/starship/starship/pull/1679 or
# https://github.com/starship/starship/issues/625 are resolved
success_symbol = "[â¯](bold)"
error_symbol = "[â¯](bold)"
vimcmd_symbol = '[\[N\]](bold red)[â¯](bold)'
vimcmd_replace_symbol = '[\[R\]](bold green)[â¯](bold)'
vimcmd_replace_one_symbol = '[\[r\]](bold green)[â¯](bold)'
vimcmd_visual_symbol = '[\[V\]](bold purple)[â¯](bold)'
